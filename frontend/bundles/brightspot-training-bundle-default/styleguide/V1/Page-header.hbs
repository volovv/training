<!-- Putting icons here, so we don't have to include in a bunch of -body hbs's -->
{{include "/page/Page-icons.hbs" this}}

{{#if hat}}
    <div class="Page-header-hat">
        <div clsas="Page-container">
            <div class="Hat">
                <div class="Hat-content">
                    {{hat}}
                </div>
            </div>
        </div>
    </div>
{{/if}}
<bsp-header class="Page-header --fixed" data-nav-alignment="{{~#if headerNavAlignment}}{{~headerNavAlignment~}}{{~else~}}right{{~/if}}">
    <div class="Page-header-hamburger-menu">
        <div class="Page-header-hamburger-menu-wrapper">
            <div class="Page-header-hamburger-menu-content">
                {{#each navigation}}
                    {{include "/navigation/Navigation.hbs" this}}
                {{/each}}
            </div>
        </div>
    </div>
    <div clsas="Page-container">
        <div class="Page-header-bar">
            <div class="Page-header-start">
                <button class="Page-header-menu-trigger" aria-expanded="false"><svg class="burger-menu"><use xlink:href="#burger-menu"></use></svg><svg class="close-x"><use xlink:href="#close-x"></use></svg><span class="label">{{#with navigationToggle}}{{this}}{{else}}{{format "/page/Page" "menuLabel"}}{{/with}}</span></button>

                {{#with logo}}
                    {{#set imageSize="siteLogo"}}
                        <div class="Page-header-bar-logo">{{this}}</div>
                    {{/set}}
                {{/with}}
            </div>

            <div class="Page-header-navigation">
                {{#with navigation}}
                {{this}}
                {{/with}}
            </div>

            <div class="Page-header-end">
                {{#with authentication}}
                {{this}}
                {{/with}}
            </div>
        </div>
    </div>
</bsp-header>
{{#if banner}}
    {{banner}}
{{/if}}
